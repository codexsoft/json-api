{
    "name": "codexsoft/json-api",
    "license": "MIT",
    "description": "Tools for building JSON API backend and docs based on Symfony Forms and Swagger",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2.0",
        "codexsoft/operations": "dev-master",
        "symfony/form": "^4.0",
        "symfony/console": "^4.1",
        "symfony/framework-bundle": "^4.3",
        "symfony/validator": "^4.1",
        "ext-json": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^6"
    },
    "autoload": {
        "psr-4": {
            "": ["src/", "vendor/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": ["tests/unit/"]
        }
    },
    "bin": [
        "bin/codexsoft.json-api"
    ]
}
